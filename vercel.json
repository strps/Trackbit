{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "buildCommand": "pnpm -r build",
    "outputDirectory": "apps/frontend/dist",
    "functions": {
        "apps/backend/src/**/*.ts": {
            "runtime": "node"
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/apps/frontend/dist/index.html"
        },
        {
            "source": "/api/(.*)",
            "destination": "/apps/backend/src/index.ts"
        }
    ],
    "framework": null
}