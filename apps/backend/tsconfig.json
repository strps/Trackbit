{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "es2024",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "drizzle.config.ts"
    ],
    "references": [
        {
            "path": "../../packages/types"
        }
    ]
}