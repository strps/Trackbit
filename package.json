{
    "name": "trackbit-monorepo",
    "private": true,
    "packageManager": "pnpm@10.24.0",
    "scripts": {
        "dev": "pnpm -r dev",
        "dev:frontend": "pnpm --filter frontend dev",
        "dev:backend": "pnpm --filter backend dev",
        "db:generate": "pnpm --filter backend db:generate",
        "db:migrate": "pnpm --filter backend db:migrate",
        "db:push": "pnpm --filter backend db:push",
        "db:studio": "pnpm --filter backend db:studio",
        "db:pull": "pnpm --filter backend db:pull",
        "db:drop": "pnpm --filter backend db:drop",
        "build": "pnpm -r build",
        "lint:all": "pnpm -r lint"
    },
    "devDependencies": {
        "turbo": "^2.0.0",
        "typescript": "^5.9.3"
    }
}